{{#if showListings}}
  {{#each sortedListings as |listing|}}
    <h5>{{listing.title}} | {{listing.content}}</h5>
    {{update-listing listing=listing}}
  {{/each}}
  <button {{action 'showListingsHide'}}>Hide Listings</button>
{{else}}
  <button {{action 'showListingsShow'}}>Show Listings</button>
{{/if}}
